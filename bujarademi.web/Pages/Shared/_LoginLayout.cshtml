<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>
        @ViewData["Title"] - Bujar Ademi
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/admin-vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-site.css" asp-append-version="true" />
</head>
<body>
    <div class="auth">
        <div class="auth-container">
            <div class="card">
                <header class="auth-header">
                    <h3 class="auth-title">Bujar Ademi</h3>
                </header>
                <div class="auth-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/js/admin-vendor.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/admin-site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
